# -----------------------------------
# Nuxt.js環境構築用のDockerfile
# -----------------------------------
# ベースにするイメージ
# FROM node:16-alpine3.14
FROM node:18.19.1-alpine3.19

# 作業用ディレクトリ
WORKDIR /var/www/html

# 必要なパッケージをインストール
RUN apk add --update \
    bash \
    curl
RUN npm update -g npm

# package.jsonとpackage-lock.jsonをコピー
COPY ./web/package*.json ./

# 依存関係をインストール
RUN npm install

# アプリケーションのソースコードをコピー
COPY ./web .

# ネットワーク設定
EXPOSE 3001
ENV HOST 0.0.0.0

# アプリケーションの起動
CMD ["npm", "run", "dev"]
